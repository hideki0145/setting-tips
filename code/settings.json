{
    // 共通設定
    "workbench.startupEditor": "newUntitledFile",
    "editor.renderWhitespace": "all",
    "files.autoGuessEncoding": true,
    "files.eol": "\n",
    // 言語別設定
    "[python]": {
        "editor.tabSize": 4,
        "editor.rulers": [80],
    },
    // 拡張機能別設定
    "markdownlint.config": {
        "MD009": {"br_spaces": 2},
    },
    "python.pythonPath": "/usr/bin/python3",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
}